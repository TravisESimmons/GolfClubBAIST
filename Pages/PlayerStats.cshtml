@page
@model GolfBAIST.Pages.PlayerStatsModel
@{
    ViewData["Title"] = "Player Stats";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Player Statistics</h2>

@if (Model.ScoreDifferentials.Any())
{
    <div class="card shadow-sm" style="max-width: 100%;">
        <div class="card-body p-3">
            <h4>Handicap Index</h4>
            <p class="display-4 font-weight-bold">@Model.HandicapIndex.ToString("0.0")</p>

            <h5 class="mt-3">Recent Score Differentials</h5>
            <ul class="list-group mb-3 list-group-flush">
                @foreach (var diff in Model.ScoreDifferentials)
                {
                    <li class="list-group-item px-2 py-1">@diff.ToString("0.0")</li>
                }
            </ul>

            <h5>Score History</h5>
            <div style="overflow-x: hidden;">
                <table class="table table-striped table-sm mb-0" style="table-layout: fixed; width: 100%; max-width: 850px; margin: 0 auto;">
                    <thead class="thead-dark">
                        <tr>
                            <th style="width: 95px; font-size: 0.95em; padding: 0.5rem;">Date</th>
                            <th style="width: 190px; font-size: 0.95em; padding: 0.5rem;">Course</th>
                            <th style="width: 75px; font-size: 0.95em; padding: 0.5rem;" class="text-center">Score</th>
                            <th style="width: 85px; font-size: 0.95em; padding: 0.5rem;" class="text-center d-none d-md-table-cell">Rating</th>
                            <th style="width: 75px; font-size: 0.95em; padding: 0.5rem;" class="text-center d-none d-md-table-cell">Slope</th>
                            <th style="width: 75px; font-size: 0.95em; padding: 0.5rem;" class="text-center">Diff.</th>
                            <th style="width: 100px; font-size: 0.95em; padding: 0.5rem;" class="text-center">Tee Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ScoresWithDifferentials)
                        {
                            <tr>
                                <td style="font-size: 0.9em; padding: 0.4rem;">@item.Score.Date.ToString("MM/dd")</td>
                                <td class="text-truncate" style="font-size: 0.9em; padding: 0.4rem; max-width: 190px;" title="@item.Score.CourseName">@item.Score.CourseName</td>
                                <td class="text-center" style="font-size: 0.9em; padding: 0.4rem;">@item.Score.TotalScore</td>
                                <td class="text-center d-none d-md-table-cell" style="font-size: 0.9em; padding: 0.4rem;">@item.Score.CourseRating</td>
                                <td class="text-center d-none d-md-table-cell" style="font-size: 0.9em; padding: 0.4rem;">@item.Score.SlopeRating</td>
                                <td class="text-center" style="font-size: 0.9em; padding: 0.4rem;">@item.Differential.ToString("0.0")</td>
                                <td class="text-center" style="font-size: 0.9em; padding: 0.4rem;">#@item.Score.TeeTimeID</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info text-center" style="max-width: 100%;">No score data available to calculate handicap index.</div>
}
<div class="mt-3 text-center">
    <a href="/MyTeeTimes" class="btn btn-outline-secondary btn-sm">⬅ Back to My Tee Times</a>
</div>
