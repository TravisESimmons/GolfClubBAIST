@model List<GolfBAIST.Models.TeeTime>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Date</th>
                <th>Start</th>
                <th>End</th>
                <th>Players</th>
                <th>Phone</th>
                <th>Carts</th>
                <th>Employee</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Date.ToShortDateString()</td>
                    <td>@t.StartTime</td>
                    <td>@t.EndTime</td>
                    <td>@t.Players</td>
                    <td>@t.Phone</td>
                    <td>@t.Carts</td>
                    <td>@t.EmployeeName</td>
                    <td>
                        <form method="post" asp-page-handler="ApproveCancellation" asp-route-id="@t.TeeTimeID" class="d-inline">
                            <button class="btn btn-sm btn-success">✓</button>
                        </form>
                        <form method="post" asp-page-handler="DenyCancellation" asp-route-id="@t.TeeTimeID" class="d-inline">
                            <button class="btn btn-sm btn-danger">✕</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
